<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dicoding.associate.cataloguemovie">

    <uses-permission android:name="android.permission.INTERNET" />
    <permission android:name="com.dicoding.associate.cataloguemovie.READ_DATABASE" android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FilmDetailActivity"></activity>
        <provider
            android:authorities="com.dicoding.associate.cataloguemovie"
            android:name=".Provider.MovieProvider"
            android:exported="true"
            android:readPermission="com.dicoding.associate.cataloguemovie.READ_DATABASE" />
    </application>

</manifest>