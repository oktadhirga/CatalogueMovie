<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/img_movie"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/movie_title" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/img_movie"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        tools:text="@string/movie_title" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/img_movie"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="12sp"
        tools:text="@string/movie_desciption" />

    <TextView
        android:id="@+id/tv_date_release"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_desc"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/img_movie"
        android:textSize="12sp"
        tools:text="@string/date_release" />

    <TextView
        android:id="@+id/tv_vote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_date_release"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/img_movie"
        android:textSize="12sp"
        tools:text="@string/vote" />

</RelativeLayout>